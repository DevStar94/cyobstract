# PURPOSE
# Build the top level domain regex.
# It should be placed in extract/re_auto.py

from __future__ import print_function

import os

import smoke
from cyobstract import trie

config = smoke.config()

tld_ign_file = os.path.join(config.etc_dir, "tlds_ignore.txt")
tlds_ign = set()
if os.path.exists(tld_ign_file):
    for tld in smoke.load_and_strip_comments(tld_ign_file):
        tlds_ign.add(tld.lower())
        tlds_ign.add(tld.upper())

tld_file = os.path.join(config.etc_dir, "tlds.txt")
tlds = set()
for tld in smoke.load_and_strip_comments(tld_file):
    tlds.add(tld.lower())
    tlds.add(tld.upper())

tlds.difference_update(tlds_ign)

print(trie.re_str_from_tokens(tlds))
